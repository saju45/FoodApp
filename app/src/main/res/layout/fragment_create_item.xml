<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.Fragment.Admin.CreateItemFragment"
    tools:ignore="MissingClass">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:text="change"
        android:textSize="12sp"
        android:background="@drawable/btn_gradiant"
        android:backgroundTint="#ECDA40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="50dp"
        android:layout_height="25dp"/>

    <Spinner
        android:layout_marginTop="20dp"
        android:id="@+id/spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Create food"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner"


        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/post_btn"
        android:text="upload"
        android:textColor="@color/white"
        android:enabled="false"
        android:background="@drawable/btn_gradiant"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="75dp"
        android:layout_height="40dp"/>

    <View
        android:id="@+id/view1"
        android:layout_marginTop="8dp"
        android:background="@color/lightGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/create_post"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_bg"
        android:padding="10dp"
        android:id="@+id/foodName"
        android:hint="Enter Food Name"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_bg"
        android:padding="10dp"
        android:id="@+id/oldPrice"
        android:hint="Enter your price"
        app:layout_constraintTop_toBottomOf="@id/foodName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <EditText
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edit_bg"
        android:padding="10dp"
        android:id="@+id/newPrice"
        android:hint="Enter your new price"
        app:layout_constraintTop_toBottomOf="@id/oldPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <EditText
        android:gravity="top"
        android:id="@+id/add_post_description"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        android:hint="Enter food Details"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newPrice"
        app:layout_constraintBottom_toTopOf="@id/postImg"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/galleryimgId"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16sp"
        android:src="@drawable/gallery"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/addPost"
        android:layout_marginStart="16sp"
        android:text="Add to your post"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/galleryimgId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view2"
        android:background="@color/transparent"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/galleryimgId"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_marginBottom="30dp"
        android:id="@+id/postImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/programmer"
        app:layout_constraintBottom_toTopOf="@id/view2"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>