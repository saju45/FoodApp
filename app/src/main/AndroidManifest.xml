<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.Activity.OrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.PlaceOrderActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.SingleItemActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.AdminHomeActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.UserHomeActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.SignUpaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Activity.MainActivity"
            android:exported="true" />
    </application>

</manifest>